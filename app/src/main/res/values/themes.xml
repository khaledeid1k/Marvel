<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Marvel" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#E30C0C</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorForeground">@color/on_background_38</item>
        <item name="android:windowBackground">@color/black</item>

        <item name="android:statusBarColor">?android:windowBackground</item>
        <!-- Splash Screen-->
        <item name="android:windowSplashscreenContent" tools:targetApi="s">@drawable/splash_logo
        </item>
    </style>

    <style name="Theme.Marvel" parent="Base.Theme.Marvel" />

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>