<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Marvel" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorForeground">@color/on_background_38</item>
        <item name="android:windowBackground">@android:color/black</item>

        <!-- Splash Screen-->
        <item name="android:windowSplashscreenContent" tools:targetApi="s">@drawable/splash_logo</item>
    </style>

    <style name="Theme.Marvel" parent="Base.Theme.Marvel" />

    <style name="TextStyle">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextStyle.BodyMedium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.BodyMedium.SearchBoxStyle">
        <item name="android:background">@drawable/search_edit_text_background</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">14sp</item>
        <item name="android:drawableTint">@color/on_background_38</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">search</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">16sp</item>
        <item name="android:textColorHint">@color/on_background_38</item>
        <item name="android:textColor">@color/on_background_87</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

</resources>